#include <iostream>
using namespace std;

class Marks {
private:
    int rno;
    float perc;

public:
    Marks() : rno(0), perc(0.0f) {}

    Marks(int r, float p) : rno(r), perc(p) {}

    void printDetails() {
        cout << "Roll No: " << rno << ", Percentage: " << perc << "%" << endl;
    }
};

class Student {
private:
    Marks objM;
    string name;

public:
    void SetName(string n) {
        name = n;
    }

    void getResult(Marks obj) {
        objM = obj;
        cout << "Student Name: " << name << endl;
        objM.printDetails();
    }
};

int main() {
    Marks Mks[5] = {
        Marks(3001, 81),
        Marks(3002, 53),
        Marks(3003, 76),
        Marks(3004, 89),
        Marks(3005, 67)
    };

    Student std[5];

    for (int i = 0; i < 5; i++) {
        string studentName;
        cout << "Enter the name of student " << i + 1 << ": ";
        cin >> studentName;
        std[i].SetName(studentName);
    }

    for (int i = 0; i < 5; i++) {
        std[i].getResult(Mks[i]);
    }

    return 0;
}
